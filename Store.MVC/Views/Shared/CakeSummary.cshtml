@model StoreLogic.Entities.Cake

<div class="well">
    <h3>
        <strong>
            @Model.Name
        </strong>
        @if (@Model.Category.Equals("Кекс"))
        {
            <span class="badge badge-danger">New!</span>
        }
        @using (Html.BeginForm("AddToBasket", "Basket"))
        {
            <div class="pull-right">
                @Html.HiddenFor(x => x.Id)
                @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                <input type="submit" class="btn btn-success" value="Добавить в корзину" />
                <span class=" label label-primary">@Model.Price$ USD</span>
            </div>
        }
        
    </h3>
    <span class="lead">@Model.Description</span>
</div>